@model List<ImdbTop100ViewModel>
@{
    ViewData["Title"] = "Imdb Top 100";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IMDB Top 100</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        .movie-card {
            transition: transform 0.3s;
            height: 100%;
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .movie-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            }

        .rank-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #e50914; /* Netflix kırmızısı gibi */
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
            z-index: 1;
        }

        .card-img-top {
            height: 300px;
            object-fit: cover; /* Resmin oranını bozmadan kutuya sığdırır */
        }

        .description-text {
            display: -webkit-box;
            -webkit-line-clamp: 3; /* 3 satırdan fazlasını ... ile keser */
            -webkit-box-orient: vertical;
            overflow: hidden;
            font-size: 0.9rem;
            color: #666;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-5">
        <h1 class="text-center mb-5 fw-bold text-dark">IMDB Top 100 Listesi</h1>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card movie-card">
                        <div class="rank-badge">#@item.rank</div>

                        <img src="@item.image" class="card-img-top" alt="@item.title">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@item.title</h5>
                            <span class="badge bg-secondary mb-2 w-25">@item.year</span>

                            <p class="card-text description-text">
                                @item.description
                            </p>

                            <div class="mt-auto">
                                <a href="@item.imdb_link" target="_blank" class="btn btn-dark w-100">
                                    <i class="fa-solid fa-play me-2"></i>Fragmanı İzle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>