@model List<ImdbTop100ViewModel>
@{
    ViewData["Title"] = "IMDB Top 100";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IMDB Top 100 - En İyiler</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #f5c518; /* IMDB Sarısı */
            --accent-color: #e50914; /* Vurgu Kırmızısı */
            --bg-dark: #121212;
            --card-bg: #1f1f1f;
            --text-light: #e0e0e0;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Poppins', sans-serif;
        }

        /* Başlık Stili */
        .page-header {
            background: linear-gradient(to right, #000000, #434343);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0px 4px 10px rgba(255,255,255,0.1);
        }

        .header-section h1 {
            color: #fff;
            -webkit-text-fill-color: initial;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Kart Yapısı */
        .movie-card {
            background-color: var(--card-bg);
            border: none;
            border-radius: 16px;
            overflow: hidden;
            height: 100%;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

            .movie-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.5);
                border-bottom: 4px solid var(--primary-color);
            }

        /* Resim Alanı ve Zoom Efekti */
        .img-wrapper {
            overflow: hidden;
            height: 320px;
            position: relative;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .movie-card:hover .card-img-top {
            transform: scale(1.1);
        }

        /* Resim Üzerindeki Karanlık Gradyan (Yazı okunurluğu için opsiyonel) */
        .img-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 50%;
            background: linear-gradient(to top, var(--card-bg), transparent);
            opacity: 0.9;
        }

        /* Sıralama Rozeti (Daha modern) */
        .rank-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(5px);
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            padding: 8px 14px;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1.1rem;
            z-index: 2;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
        }

        /* Kart İçeriği */
        .card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            color: #fff;
            font-weight: 600;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }

        .year-badge {
            background-color: rgba(255, 255, 255, 0.1);
            color: #bbb;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .description-text {
            color: #a0a0a0;
            font-size: 0.9rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 1.5rem;
            font-weight: 300;
        }

        /* Buton Tasarımı */
        .btn-imdb {
            background-color: var(--primary-color);
            color: #000;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            padding: 10px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

            .btn-imdb:hover {
                background-color: #e3b616;
                transform: scale(1.02);
                color: #000;
                box-shadow: 0 0 15px rgba(245, 197, 24, 0.4);
            }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-dark);
        }

        ::-webkit-scrollbar-thumb {
            background: #444;
            border-radius: 5px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--primary-color);
            }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="header-section text-center mb-5">
            <h1 class="display-4 fw-bold"><i class="fa-solid fa-film text-warning me-3"></i>IMDB Top 100</h1>
            <p class="text-secondary lead">Dünyanın en iyi filmleri bir arada</p>
            <div style="height: 4px; width: 100px; background: var(--primary-color); margin: 20px auto; border-radius: 2px;"></div>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card movie-card h-100">

                        <div class="img-wrapper">
                            <div class="rank-badge">
                                <i class="fa-solid fa-trophy me-1" style="font-size:0.8em"></i> #@item.rank
                            </div>
                            <img src="@item.image" class="card-img-top" alt="@item.title" loading="lazy">
                            <div class="img-overlay"></div>
                        </div>

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title text-truncate" title="@item.title">@item.title</h5>
                            </div>

                            <div>
                                <span class="year-badge"><i class="fa-regular fa-calendar me-1"></i>@item.year</span>
                            </div>

                            <p class="card-text description-text">
                                @item.description
                            </p>

                            <div class="mt-auto">
                                <a href="@item.imdb_link" target="_blank" class="btn btn-imdb w-100">
                                    <i class="fa-brands fa-imdb fa-lg me-2"></i>İncele
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <footer class="text-center text-secondary mt-5 py-4 border-top border-secondary">
            <small>&copy; @DateTime.Now.Year - IMDB Listesi</small>
        </footer>
    </div>

</body>
</html>